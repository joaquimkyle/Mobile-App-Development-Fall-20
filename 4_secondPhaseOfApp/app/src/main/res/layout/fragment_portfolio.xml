<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fadeScrollbars="false"
    android:fillViewport="true"
    android:scrollbarStyle="outsideOverlay">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="50dp"
        android:background="@color/cream"
        tools:context=".ui.portfolio.PortfolioFragment">

        <TextView
            android:id="@+id/header1"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/days_one"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@color/lightGreen"
            android:textSize="28sp"
            android:textStyle="bold"
            android:text="My Portfolio"
            app:layout_constraintBottom_toTopOf="@+id/companyOneName"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/companyOneName"
            android:layout_width="250dp"
            android:layout_height="31dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/days_one"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@color/lightGreen"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/companyOneLogo"
            app:layout_constraintStart_toStartOf="@+id/companyOneLogo" />

        <TextView
            android:id="@+id/companyOneTicker"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/days_one"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@color/lightGreen"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/companyOneLogo"
            app:layout_constraintStart_toEndOf="@+id/companyOneLogo" />

        <TextView
            android:id="@+id/companyOneShare"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/days_one"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@color/lightGreen"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/companyOneLogo"
            app:layout_constraintTop_toTopOf="@+id/companyOneLogo" />

        <ImageView
            android:id="@+id/companyOneLogo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="150dp"
            android:contentDescription="companyOneLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/companyTwoName"
            android:layout_width="250dp"
            android:layout_height="31dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/days_one"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@color/lightGreen"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/companyTwoLogo"
            app:layout_constraintStart_toStartOf="@+id/companyTwoLogo" />

        <TextView
            android:id="@+id/companyTwoTicker"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/days_one"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@color/lightGreen"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/companyTwoLogo"
            app:layout_constraintStart_toEndOf="@+id/companyTwoLogo" />

        <TextView
            android:id="@+id/companyTwoShare"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/days_one"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@color/lightGreen"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/companyTwoLogo"
            app:layout_constraintTop_toTopOf="@+id/companyTwoLogo" />

        <ImageView
            android:id="@+id/companyTwoLogo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="275dp"
            android:contentDescription="companyOneLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/header3"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/days_one"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@color/lightGreen"
            android:textSize="28sp"
            android:textStyle="bold"
            android:text="My Brother's Portfolio"
            app:layout_constraintBottom_toTopOf="@+id/companyThreeName"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/companyThreeName"
            android:layout_width="250dp"
            android:layout_height="31dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/days_one"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@color/lightGreen"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/companyThreeLogo"
            app:layout_constraintStart_toStartOf="@+id/companyThreeLogo" />

        <TextView
            android:id="@+id/companyThreeTicker"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/days_one"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@color/lightGreen"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/companyThreeLogo"
            app:layout_constraintStart_toEndOf="@+id/companyThreeLogo" />

        <TextView
            android:id="@+id/companyThreeShare"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/days_one"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@color/lightGreen"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/companyThreeLogo"
            app:layout_constraintTop_toTopOf="@+id/companyThreeLogo" />

        <ImageView
            android:id="@+id/companyThreeLogo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="525dp"
            android:contentDescription="companyOneLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/companyFourName"
            android:layout_width="250dp"
            android:layout_height="31dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/days_one"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@color/lightGreen"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/companyFourLogo"
            app:layout_constraintStart_toStartOf="@+id/companyFourLogo" />

        <TextView
            android:id="@+id/companyFourTicker"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/days_one"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@color/lightGreen"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/companyFourLogo"
            app:layout_constraintStart_toEndOf="@+id/companyFourLogo" />

        <TextView
            android:id="@+id/companyFourShare"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/days_one"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@color/lightGreen"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/companyFourLogo"
            app:layout_constraintTop_toTopOf="@+id/companyFourLogo" />

        <ImageView
            android:id="@+id/companyFourLogo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="650dp"
            android:contentDescription="companyOneLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>