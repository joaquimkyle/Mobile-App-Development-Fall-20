<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".ui.portfolio.PortfolioFragment">

    <TextView
        android:id="@+id/companyOneName"
        android:layout_width="250dp"
        android:layout_height="31dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/days_one"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textColor="@color/lightGreen"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/companyOneLogo"
        app:layout_constraintStart_toStartOf="@+id/companyOneLogo" />

    <TextView
        android:id="@+id/companyOneTicker"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/days_one"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textColor="@color/lightGreen"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/companyOneLogo"
        app:layout_constraintStart_toEndOf="@+id/companyOneLogo" />

    <TextView
        android:id="@+id/companyOneShare"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/days_one"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textColor="@color/lightGreen"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/companyOneLogo"
        app:layout_constraintTop_toTopOf="@+id/companyOneLogo" />

    <ImageView
        android:id="@+id/companyOneLogo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:contentDescription="companyOneLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>