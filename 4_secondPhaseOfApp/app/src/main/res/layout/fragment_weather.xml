<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".ui.weather.WeatherFragment">

    <TextView
        android:id="@+id/headerCurrentLocation"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/days_one"
        android:gravity="center_vertical"
        android:text="Where I Am"
        android:textColor="@color/lightGreen"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/iconCurrentLocation"
        app:layout_constraintStart_toStartOf="@id/iconCurrentLocation" />

    <ImageView
        android:id="@+id/iconCurrentLocation"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="411dp"
        android:layout_marginBottom="731dp"
        android:contentDescription="weatherIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tempCurrentLocation"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/days_one"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/lightGreen"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iconCurrentLocation"
        app:layout_constraintStart_toEndOf="@id/iconCurrentLocation" />

    <TextView
        android:id="@+id/textCurrentLocation"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/days_one"
        android:gravity="center_vertical|end"
        android:textColor="@color/lightGreen"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tempCurrentLocation"
        app:layout_constraintStart_toEndOf="@id/tempCurrentLocation" />

    <TextView
        android:id="@+id/headerWhereFrom"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/days_one"
        android:gravity="center_vertical"
        android:text="Where I'm From"
        android:textColor="@color/lightGreen"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/iconWhereFrom"
        app:layout_constraintStart_toStartOf="@id/iconWhereFrom" />

    <ImageView
        android:id="@+id/iconWhereFrom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="75dp"
        android:contentDescription="weatherIcon"
        app:layout_constraintStart_toStartOf="@id/iconCurrentLocation"
        app:layout_constraintTop_toBottomOf="@id/iconCurrentLocation" />

    <TextView
        android:id="@+id/tempWhereFrom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/days_one"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/lightGreen"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iconWhereFrom"
        app:layout_constraintStart_toEndOf="@id/iconWhereFrom" />

    <TextView
        android:id="@+id/textWhereFrom"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/days_one"
        android:gravity="center_vertical|end"
        android:textColor="@color/lightGreen"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tempWhereFrom"
        app:layout_constraintStart_toEndOf="@id/tempWhereFrom" />

    <TextView
        android:id="@+id/headerLikeToBe"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/days_one"
        android:gravity="center_vertical"
        android:text="Where I'd Like To Be"
        android:textColor="@color/lightGreen"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/iconLikeToBe"
        app:layout_constraintStart_toStartOf="@id/iconLikeToBe" />

    <ImageView
        android:id="@+id/iconLikeToBe"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="75dp"
        android:contentDescription="weatherIcon"
        app:layout_constraintTop_toBottomOf="@id/iconWhereFrom"
        app:layout_constraintStart_toStartOf="@id/iconCurrentLocation" />

    <TextView
        android:id="@+id/tempLikeToBe"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/days_one"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/lightGreen"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iconLikeToBe"
        app:layout_constraintStart_toEndOf="@id/iconLikeToBe" />

    <TextView
        android:id="@+id/textLikeToBe"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/days_one"
        android:gravity="center_vertical|end"
        android:textColor="@color/lightGreen"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tempLikeToBe"
        app:layout_constraintStart_toEndOf="@id/tempLikeToBe" />

    <TextView
        android:id="@+id/headerFamilyFrom"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/days_one"
        android:gravity="center_vertical"
        android:text="Where My Family Is From"
        android:textColor="@color/lightGreen"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/iconFamilyFrom"
        app:layout_constraintStart_toStartOf="@id/iconFamilyFrom" />

    <ImageView
        android:id="@+id/iconFamilyFrom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="75dp"
        android:contentDescription="weatherIcon"
        app:layout_constraintTop_toBottomOf="@id/iconLikeToBe"
        app:layout_constraintStart_toStartOf="@id/iconCurrentLocation" />

    <TextView
        android:id="@+id/tempFamilyFrom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/days_one"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/lightGreen"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iconFamilyFrom"
        app:layout_constraintStart_toEndOf="@id/iconFamilyFrom" />

    <TextView
        android:id="@+id/textFamilyFrom"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/days_one"
        android:gravity="center_vertical|end"
        android:textColor="@color/lightGreen"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tempFamilyFrom"
        app:layout_constraintStart_toEndOf="@id/tempFamilyFrom" />

</androidx.constraintlayout.widget.ConstraintLayout>

